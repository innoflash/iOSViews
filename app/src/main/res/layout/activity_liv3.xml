<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ios_background"
    style="@style/block.all"
    tools:context=".LIV3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <net.innoflash.iosview.lists.ListItemView3
            android:layout_width="match_parent"
            app:item_heading="@string/loading"
            app:item_heading_color="@color/ios_orange"
            app:item_icon="@drawable/ic_android_blue_24dp"
            app:item_content_color="@color/ios_red"
            app:item_content="@string/loading"
            app:item_footer="@string/loading"
            app:item_type="orange"
            app:item_has_type="true"
            app:item_badge="--"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>