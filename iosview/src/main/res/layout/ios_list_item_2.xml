<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/l2height"
    android:layout_width="match_parent">

    <ImageView android:layout_width="@dimen/l2height"
        android:id="@+id/item_icon"
        android:src="@drawable/ic_tap_and_play_blue_24dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/margin10"
        android:layout_height="@dimen/l2height"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_toRightOf="@+id/item_icon"
        android:orientation="vertical"
        android:id="@+id/ll"
        android:minHeight="@dimen/l2height"
        android:layout_toLeftOf="@+id/arrow_right"
        android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
            android:id="@+id/item_heading"
            android:text="@string/header"
            android:paddingBottom="@dimen/dimen3"
            android:paddingTop="@dimen/dimen3"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/headerx"
            android:textStyle="bold"
            android:id="@+id/item_content"
            android:textSize="@dimen/text18"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll"
        android:layout_toRightOf="@+id/item_icon"
        android:background="@color/ios_toolbar_line"/>
    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/ic_chevron_right_black_18dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>