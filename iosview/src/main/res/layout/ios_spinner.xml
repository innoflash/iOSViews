<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <ImageView android:layout_width="@dimen/l2height"
        android:id="@+id/spinner_icon"
        android:src="@drawable/ic_tap_and_play_blue_24dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/margin10"
        android:layout_height="@dimen/l2height"
        android:paddingEnd="@dimen/margin10"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_toRightOf="@+id/spinner_icon"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
            android:id="@+id/spinner_heading"
            android:paddingTop="@dimen/margin5"
            android:textColor="@color/ios_blue"
            android:text="@string/header"
            android:singleLine="true"
            android:layout_height="wrap_content"/>

        <Spinner android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="@string/loading"
            android:textStyle="bold"
            android:background="@null"
            android:id="@+id/spinner_spinner"
            android:singleLine="true"
            android:inputType="text"
            android:textSize="@dimen/text18"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ios_toolbar_line"/>
    </LinearLayout>


</RelativeLayout>